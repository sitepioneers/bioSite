<a href="{{ company.url }}{{ url }}" class="c-block-media c-block-media--{{ styleModifier }}">

  <div class="c-block-media__media">
    {{> atoms-square:c-block-media__img }}
  </div>

  <div class="c-block-media__body">
    <h3 class="c-block-media__headline">{{ headline.short }}</h3>
    <p class="c-block-media__excerpt">{{ excerpt.medium }}</p>
  </div><!-- end c-block-media__body -->
</a><!-- end c-block-media -->